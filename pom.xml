<?xml version="1.0" encoding="UTF-8"?>
<!-- File managed by WebFX (DO NOT EDIT MANUALLY) -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>dev.webfx</groupId>
        <artifactId>webfx-parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    
    <artifactId>webfx-maven-plugin</artifactId>
    <packaging>maven-plugin</packaging>
    
    <name>Webfx Maven Plugin</name>
 
    <repositories>
        <!-- For WebFX snapshots download (including webfx-parent) -->
        <repository>
            <id>webfx-snapshots</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <properties>
        <!-- Java 13 is required because of the use of FileSystems.newFileSystem() in the code -->
        <java.version>13</java.version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>org.apache.maven.plugin-tools</groupId>
            <artifactId>maven-plugin-tools-annotations</artifactId>            
            <version>3.8.1</version>
            <scope>provided</scope>
        </dependency>

        <!-- Used by InitMojo to prompt the artifact if not provided -->
        <dependency>
            <groupId>org.codehaus.plexus</groupId>
            <artifactId>plexus-interactivity-api</artifactId>
            <version>1.1</version>
        </dependency>

        <!-- Used by UpdateMojo to implement the Artifact downloader -->
        <dependency>
            <groupId>org.apache.maven.shared</groupId>
            <artifactId>maven-artifact-transfer</artifactId>
            <version>0.13.1</version>
        </dependency>

        <dependency>
            <groupId>dev.webfx</groupId>
            <artifactId>webfx-cli</artifactId>
            <version>${webfx.version}</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>      
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-plugin-plugin</artifactId>
                <version>3.8.1</version>
            </plugin>
        </plugins>
    </build>
</project>